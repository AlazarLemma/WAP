<%-include ("navigator")%>
   <table>

      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>id</th>
      <th>to be added</th>

      <% products.map((product) => { -%>
         <tr>
             <td><%= product.id %></td>
             <td><%= product.name %></td>
             <td><%= product.description %></td>
             <td><%= product.price %></td>
             <td>
                 <form action="/addToCart" method="post">
                     <input type="text" name="name" value="<%= product.name %>" style="display: none;"/> 
                     <input type="text" name="price"  value="<%= product.price %>" style="display: none;"/>
                     <input type="submit" value="Add to cart"/>
                 </form>
             </td>
         </tr>
         <%
     }) %>
 </table>
 <div>
     <a href="/cart"><button>show cart</button></a>
 </div>
   <%-include ("end")%>